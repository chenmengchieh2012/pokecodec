{
  "name": "pokecodec",
  "publisher": "XOMJOX",
  "displayName": "pokecodec",
  "description": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/chenmengchieh2012/pokecodec.git"
  },
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:.git/config"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pokemon.openReactPanel",
        "title": "Open Pokemon React Panel"
      },
      {
        "command": "pokemon.triggerEncounter",
        "title": "Pokemon: Trigger Encounter"
      },
      {
        "command": "pokemon.resetStorage",
        "title": "Pokemon: Reset Storage"
      },
      {
        "command": "pokemon.printDifficultyHistory",
        "title": "Pokemon: Print Difficulty History"
      },
      {
        "command": "pokecodec.printAchievementStats",
        "title": "Pokecodec: Print Achievement Stats"
      },
      {
        "command": "pokemon.bindDevice",
        "title": "Pokemon: Bind Device"
      },
      {
        "command": "pokemon.importBindCode",
        "title": "Pokemon: Import Bind Code"
      },
      {
        "command": "pokemon.downloadAndImportParty",
        "title": "Pokemon: Download and Import Party"
      },
      {
        "command": "pokemon.downloadAndImportBox",
        "title": "Pokemon: Download and Import Box"
      },
      {
        "command": "pokemon.unlockDevice",
        "title": "Pokemon: Unlock Device"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pokemon-sidebar",
          "title": "Pokemon Tools",
          "icon": "resources/sidebar-icon.svg"
        }
      ],
      "panel": [
        {
          "id": "pokemon-panel",
          "title": "Pokemon Game",
          "icon": "$(console)"
        }
      ]
    },
    "configuration": {
      "title": "PokeCodec",
      "properties": {
        "pokecodec.gitRootPath": {
          "type": "string",
          "default": "",
          "description": "Manually specify the Git root path. If empty, it will be auto-detected."
        },
        "pokecodec.gistUrl": {
          "type": "string",
          "default": "",
          "description": "Base URL for Gist raw content (e.g. https://gist.githubusercontent.com/username/gist_id/)"
        },
        "pokecodec.httpProxy": {
          "type": "string",
          "default": "",
          "description": "HTTP Proxy URL (e.g. http://127.0.0.1:7890)"
        }
      }
    },
    "views": {
      "pokemon-panel": [
        {
          "id": "pokemonReact",
          "name": "Game Screen",
          "type": "webview"
        }
      ],
      "pokemon-sidebar": [
        {
          "id": "pokemonBackpack",
          "name": "Backpack",
          "type": "webview"
        },
        {
          "id": "pokemonComputer",
          "name": "Pokemon Computer",
          "type": "webview"
        },
        {
          "id": "pokemonShop",
          "name": "Shop",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "install:all": "npm install && cd webview-ui && npm install",
    "build:webview": "cd webview-ui && npm run build",
    "package": "npm run build:webview && npm run compile",
    "download-data": "node scripts/downloadPokemonData.js",
    "download-sprites": "node scripts/downloadSprites.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/qrcode": "^1.5.6",
    "@types/vscode": "^1.106.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "dependencies": {
    "@types/pako": "^2.0.4",
    "https-proxy-agent": "^7.0.6",
    "pako": "^2.1.0",
    "qrcode": "^1.5.4",
    "uuid": "^13.0.0"
  }
}
